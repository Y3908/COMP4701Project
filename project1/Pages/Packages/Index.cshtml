@page
@model project1.Pages.Packages.IndexModel
@{
    ViewData["Title"] = "Packages";
}

<h1>Travel Packages</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input asp-for="Search" class="form-control" placeholder="Search by title or destination" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
    <div class="form-text">Results: @Model.Packages.Count</div>
    <span asp-validation-for="Search" class="text-danger"></span>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function(){
        $("input[name='Search']").focus();
    });
 </script>

<div class="row row-cols-1 row-cols-md-3 g-3">
@foreach (var p in Model.Packages)
{
    <div class="col">
        <div class="card h-100">
            @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
            {
                <img class="card-img-top" src="@p.ImageUrl" alt="@p.Title" style="object-fit:cover;height:180px;" />
            }
            <div class="card-body">
                <h5 class="card-title">@p.Title</h5>
                <p class="card-text">@p.Description</p>
                <p class="card-text"><strong>Duration:</strong> @p.DurationDays days</p>
                <p class="card-text"><strong>Base Price:</strong> @p.BasePrice.ToString("C")</p>
                <a asp-page="Details" asp-route-id="@p.PackageID" class="btn btn-outline-primary">View Details</a>
            </div>
        </div>
    </div>
}
</div>


